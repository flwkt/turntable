// tsconfig.json
{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "declaration": true,     // Generate declaration files
    "outDir": "npm",        // Rollup output directory
    "strict": true,
    "esModuleInterop": true,
    "importHelpers": true    // Use tslib for helper functions
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
